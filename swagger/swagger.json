                    "message": {
                      "type": "string"
                    },
                    "matchedCount": {
                      "type": "number"
                    },
                    "modifiedCount": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input or no fields to update"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
